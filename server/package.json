{
  "name": "crypto-portfolio-builder",
  "version": "1.0.0",
  "description": "View current cryptocurrency values and create your own mock portfolio",
  "main": "server.js",
  "dependencies": {
    "apollo-server": "^2.9.6",
    "axios": "^0.19.0",
    "bcrypt": "^3.0.6",
    "dotenv": "^8.0.0",
    "graphql": "^14.4.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.7",
    "mongoose-unique-validator": "^2.0.3",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.1",
    "cross-env": "^6.0.3",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node server",
    "server": "nodemon server",
    "client": "npm start --prefix ../client",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run client\"",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "start:test": "cross-env NODE_ENV=test node server.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix ../client && npm run build --prefix ../client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpstanway/crypto-portfolio-builder.git"
  },
  "author": "Jordan Stanway",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jpstanway/crypto-portfolio-builder/issues"
  },
  "homepage": "https://github.com/jpstanway/crypto-portfolio-builder#readme",
  "jest": {
    "testEnvironment": "node"
  }
}
